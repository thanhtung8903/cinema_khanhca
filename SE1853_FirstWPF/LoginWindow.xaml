<Window x:Class="SE1853_FirstWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE1853_FirstWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">
        <StackPanel>
        <Label Content="Name"></Label>
        <TextBox x:Name="txtName"></TextBox>
            <Label Content="Password"></Label>
            <PasswordBox x:Name="txtPassword"></PasswordBox>
            <Button x:Name="btnLogin" Content="Login" Width="200"  Margin="20" Click="btnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
